<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <com.example.wildanafif.skripsifix.entitas.volley.CircularNetworkImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/gambar_profile_chat"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nama_pengirim"
                android:text="Nama Pengirim"

                android:textSize="20dp"

                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi Pesan Bla blal balbal"
                android:textColor="#a3a3a3"
                android:id="@+id/isi_pesan"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/waktu"
            android:gravity="right|top"

            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="10/10"
            />
    </LinearLayout>

</LinearLayout>